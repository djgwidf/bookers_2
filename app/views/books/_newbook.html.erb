<th colspan="3"></th>
<h2 class= "nt-3">New book</h2>
 <%= form_with model:book, local:true do |f| %>

 <div class= "form-group">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
 </div>

<div class= "form-group">
  <label for="book_body">Option</label>
  <%= f.text_area :body %>
 </div>

<div class= "form-group">
 <%= f.submit 'Create Books', class: "col-xs-12 btn btn-primary" %>
  </div>



<% end %>